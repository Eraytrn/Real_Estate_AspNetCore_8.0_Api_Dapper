@model List<ResultAppUserDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Kullanıcı Adı</th>
                                <th scope="col">Email</th>
                                <th scope="col">Rolü</th>
                                <th scope="col">Telefon Numarası</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th scope="row">@item.UserId</th>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@item.UserRole</td>
                                    <td>@item.PhoneNumber</td>
                                    <td><a href="/AppUser/DeleteAppUser/@item.UserId" class="btn btn-outline-danger">Sil</a></td>
                                    <td><a href="/AppUser/UpdateAppUser/@item.UserId" class="btn btn-outline-success">Güncelle</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/AppUser/CreateAppUser/" class="btn btn-outline-info">Yeni Personel Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
